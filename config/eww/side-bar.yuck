(defwidget side-bar []
  (centerbox
    :orientation "v"
    (label)
    (label)
    (systray
      :class "side-systray"
      :orientation "v"
      :valign "end"
      :spacing 11
      :icon-size 22
    )
  )
)

(defwindow side-bar [screen]
  :monitor screen
  :geometry (geometry
    :anchor "right center"
    :y "10%"
    :width "0%"
    :height "92%"
  )
  :stacking "bg"
  :exclusive true
  :focusable "ondemand"
  (side-bar)
)